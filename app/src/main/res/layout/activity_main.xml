<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="duongmh3.bittrexmanager.MainActivity">

    <TextView
        android:id="@+id/tvConfig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/cbVibrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rung" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/cbPlaySound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Âm thanh" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btUpdateConfigWarning"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Cập nhật cấu hình mới" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btStartWarningUiService"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Chạy lại phần mềm kiểm tra" />

</LinearLayout>
